        }

        stage('Build Code') {
            steps {
                script {
                    sh "chmod +x -R ${env.WORKSPACE}" // include jenkins/
                    sh "./jenkins/startup-and-install.sh"
                }
            }
        }

        stage('Run Application') {
            steps {
                script {
                    echo "Jenkins Running the application..."
                    sh "./jenkins/download-and-run-app.sh"
                }
            }
        }
    }
}
