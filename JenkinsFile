pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    def gitRepoUrl = 'https://github.com/jonathan-99/modern-ui.git'
                    def repoDir = "${WORKSPACE}/repository"

                    echo "Cloning repository from $gitRepoUrl to $repoDir..."
                    sh "git clone $gitRepoUrl $repoDir"
                }
            }
        }

        stage('Build Code') {
            steps {
                script {
                    def repoDir = "${WORKSPACE}/repository"
                    echo "Compiling TypeScript code..."
                    // Log the contents of the repository directory for debugging purposes
                    sh "ls -la $repoDir"
                    // Run TypeScript compilation with additional logging
                    sh "cd $repoDir && tsc --build tsconfig.json --listEmittedFiles --verbose"
                }
            }
        }

        stage('Run Application') {
            steps {
                script {
                    def repoDir = "${WORKSPACE}/repository"
                    echo "Running the application..."
                    sh "cd $repoDir && ./gradlew bootRun"
                }
            }
        }
    }
}
