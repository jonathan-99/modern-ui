{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "src/*": [
              "./src/*"
            ], }, 
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "jsx": "react",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "@types/prop-types",
        "prop-types"
    ]
}